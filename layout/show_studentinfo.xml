<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b222" >

    <TextView
        android:id="@+id/stuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:text=""
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/wen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/wentimiaoshu"
        android:text=""
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/daan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:text=""
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentTop="true"
        android:text="学生姓名"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/wentimiaoshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/qunit"
        android:text="问题内容"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/stuname"
        android:text="问题单元"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/daan"
        android:text="教师评价"
        android:textColor="#000000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/pingjia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:background="@drawable/b12"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wen"
        android:layout_centerHorizontal="true"
        android:text="学生答案"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/qunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"
        android:textColor="#000000"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pingjia" >

        <Button
            android:id="@+id/back666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:background="@drawable/b11"
            android:text="返回" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/back666"
            android:layout_alignBottom="@+id/back666"
            android:layout_centerHorizontal="true"
            android:background="@drawable/b11"
            android:text="提交评价"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/imageButton1play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/submit"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/submit"
            android:layout_marginLeft="22dp"
            android:background="@drawable/b11"
            android:src="@drawable/record" />

    </RelativeLayout>

</RelativeLayout>